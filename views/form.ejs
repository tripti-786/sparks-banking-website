<%- include("partials/header") %>
<div class="block">
  <h1 class="form-header">Details</h1>

  <div class="from">
    <h2>Transferring From :-</h2>
    <h3>Sender Name : <%= fromUser.name %></h3>
    <h3>Credits = <%= fromUser.credits %></h3>
  </div>

  <div class="to">
    <h2>Transferring To :-</h2>
    <h3>Receiver Name : <%= toUser.name %></h3>
    <h3>Credits = <%= toUser.credits %></h3>
  </div>

  <div class="form">
    <form
      action="/view/<%= fromUser._id %>/<%= toUser._id %>?_method=PUT"
      method="POST"
    >
      <label for="credits">
        <h3>Amount to be transferred :</h3></label>

      <input
        type="number"
        id="credit"
        name="credit"
        placeholder="Enter amount "
        value=""
      />
      <br />
      <button class="form-btn">Transfer</button>
    </form>
  </div>
</div>
<%- include("partials/footer")%>